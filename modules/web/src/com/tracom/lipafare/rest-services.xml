<?xml version="1.0" encoding="UTF-8"?>
<services xmlns="http://schemas.haulmont.com/cuba/rest-services-v2.xsd">

    <service name="lipafare_UssdService">
        <method name="getRegistrationStatus"   anonymousAllowed="true">
            <param name="phoneNumber" type="java.lang.String"/>
        </method>
        <method name="registerUser"  anonymousAllowed="true">
            <param name="phoneNumber" type="java.lang.String"/>
            <param name="firstName" type="java.lang.String"/>
            <param name="otherNames" type="java.lang.String"/>
            <param name="idNumber" type="java.lang.String"/>
            <param name="locale" type="java.lang.String"/>
        </method>
        <method name="loginUser" anonymousAllowed="true">
            <param name="phoneNumber" type="java.lang.String"/>
            <param name="password" type="java.lang.String"/>
        </method>
        <method name="balanceEnquiry">
            <param name="phoneNumber" type="java.lang.String"/>
            <param name="associationCode" type="java.lang.String"/>
        </method>
        <method name="changePin" anonymousAllowed="true">
            <param name="phoneNumber" type="java.lang.String"/>
            <param name="newPin" type="java.lang.String"/>
        </method>
        <method name="changeLanguage" anonymousAllowed="true">
            <param name="phoneNumber" type="java.lang.String"/>
            <param name="newLocale" type="java.lang.String"/>
        </method>
    </service>
</services>

